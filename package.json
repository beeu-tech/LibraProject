{
  "name": "libra-bot",
  "version": "1.0.0",
  "description": "Discord 텍스트/자율 음성채팅 봇",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:bff\" \"npm run dev:ai-worker\"",
    "dev:bot": "cd apps/bot && npm run dev",
    "dev:bff": "cd apps/bff && npm run dev",
    "dev:ai-worker": "cd apps/ai-worker && npm run dev",
    "build": "npm run build --workspaces",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
